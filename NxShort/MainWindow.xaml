                                                    </DrawingGroup>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                <StackPanel>
                    <Label Content="Todos usuários" Foreground="#FFD6D6D6" HorizontalAlignment="Center"></Label>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <StackPanel>
                    <Button x:Name="btnCurrentUser" Width="100" Height="100" FontSize="11" Margin="10" Click="btnCurrentUser_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button.Effect>
                            <DropShadowEffect Opacity="0.15" Direction="215"/>
                        </Button.Effect>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#1d1e24"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="#8c8b8b"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#FF196DE6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="100" 
                                    Height="100" 
                                    CornerRadius="20" 
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                    <Image Height="60" >
                                        <Image.Source>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <DrawingGroup ClipGeometry="M0,0 V512 H448 V0 H0 Z">
                                                        <GeometryDrawing Brush="#8c8b8b" Geometry="F1 M448,512z M0,0z M313.6,288C284.9,288 271.1,304 224,304 176.9,304 163.2,288 134.4,288 60.2,288 0,348.2 0,422.4L0,464C0,490.5,21.5,512,48,512L400,512C426.5,512,448,490.5,448,464L448,422.4C448,348.2,387.8,288,313.6,288z M416,464C416,472.8,408.8,480,400,480L48,480C39.2,480,32,472.8,32,464L32,422.4C32,365.9 77.9,320 134.4,320 154,320 173.5,336 224,336 274.4,336 294,320 313.6,320 370.1,320 416,365.9 416,422.4L416,464z M224,256C294.7,256 352,198.7 352,128 352,57.3 294.7,0 224,0 153.3,0 96,57.3 96,128 96,198.7 153.3,256 224,256z M224,32C276.9,32 320,75.1 320,128 320,180.9 276.9,224 224,224 171.1,224 128,180.9 128,128 128,75.1 171.1,32 224,32z" />
                                                    </DrawingGroup>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Image.Source>
                                    </Image>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                <StackPanel>
                    <Label Content="Usuário atual" Foreground="#FFD6D6D6" HorizontalAlignment="Center"></Label>
                </StackPanel>
            </StackPanel>
        </WrapPanel>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">
                <Label x:Name="lblNome" Content="Nome" FontWeight="Normal" Foreground="#FFD6D6D6" Margin="10, 0, 10, 0" FontSize="14"/>
                <TextBox x:Name="txtNome" Background="#FF2D3136" Height="32" TextWrapping="Wrap" Margin="10, 0, 10, 0" Text="" BorderBrush="{x:Null}" Foreground="#FFE4E4E4" Style="{DynamicResource TextBoxStyle}" FontSize="14"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label x:Name="lblDescricao" Content="Descrição" FontWeight="Normal" Foreground="#FFD6D6D6" Margin="10, 0, 10, 0" FontSize="14"/>
                <TextBox x:Name="txtDescricao" Background="#FF2D3136" Height="64" TextWrapping="Wrap" Margin="10, 0, 10, 0" Text="" BorderBrush="{x:Null}" Foreground="#FFE4E4E4" Style="{DynamicResource TextBoxStyle}" FontSize="14"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label x:Name="lblPath" Content="Arquivo" FontWeight="Normal" Foreground="#FFD6D6D6" Margin="10, 0, 10, 0" FontSize="14"/>
                <Button x:Name="btnSelectFile" Content="Arraste e solte o arquivo ou clique para procurar" Height="78" AllowDrop="True" Drop="btnSelectFile_Drop"  Click="btnSelectFile_Click"  Margin="10,0" Style="{DynamicResource ButtonDragDropStyle}" BorderBrush="#FFB9B9B9" Background="#FF2D3136" Foreground="#FFBFBFBF" FontSize="14"/>
            </StackPanel>
        </StackPanel>

        <WrapPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnCreate" Width="150" Height="30" Content="Criar" Foreground="#e4e4e4" FontSize="16" Margin="0,10,0,0" Click="Button_Click_1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <RotateTransform CenterX="0.5" CenterY="0.5" Angle="78"/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#c82090" Offset="0"/>
                        <GradientStop Color="#6a14d1" Offset="0.567"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFCE17E0" Direction="280" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="30" CornerRadius="15" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center">

                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </WrapPanel>

    </Grid>
</Window>
